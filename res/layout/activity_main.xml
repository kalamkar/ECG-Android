<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="care.dovetail.monitor.SettingsActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/beat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <TextView
                android:id="@+id/record"
                style="@style/IconTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:drawableTop="@drawable/ic_action_record"
                android:text="@string/record" />

            <ToggleButton
                android:id="@+id/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="ToggleButton"
                android:textOff="@string/action_pause"
                android:textOn="@string/action_resume"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/ic_heart" >

                <TextView
                    android:id="@+id/bpm"
                    android:layout_width="@dimen/heartbeat_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="\?"
                    android:textColor="@color/primary_dark"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/IconTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bpm" />
                
                <TextView
                    android:id="@+id/tap_to_listen"
                    style="@style/IconTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_listen"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/status"
                style="@style/IconTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/connecting"
                android:drawableTop="@drawable/ic_warning" />

            <TextView
                android:id="@+id/seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/record"
                android:layout_alignRight="@+id/record"
                android:layout_alignTop="@+id/record"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/recordingIndex"
                style="@style/IconTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/record"
                android:layout_marginLeft="@dimen/small_margin" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <fragment
            android:id="@+id/chart"
            android:name="care.dovetail.monitor.ChartFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</FrameLayout>
