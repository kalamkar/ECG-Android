<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="care.dovetail.monitor.SettingsActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/beat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <TextView
                android:id="@+id/label_record"
                style="@style/IconTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="@string/record" />

            <ImageView
                android:id="@+id/record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/label_record"
                android:layout_alignLeft="@+id/label_record"
                android:src="@drawable/ic_action_record" />

            <TextView
                android:id="@+id/label_freeze"
                style="@style/IconTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/freeze"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/freeze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/label_freeze"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_action_pause"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/ic_heart" >

                <TextView
                    android:id="@+id/bpm"
                    android:layout_width="@dimen/heartbeat_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="\?"
                    android:textColor="@color/primary_dark"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/IconTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bpm" />
                
                <TextView
                    android:id="@+id/tap_to_listen"
                    style="@style/IconTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_listen"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/label_status"
                style="@style/IconTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/connecting" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/label_status"
                android:layout_alignParentRight="true" />

            <ImageView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/label_status"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_connected"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/record"
                android:layout_alignLeft="@+id/record"
                android:layout_alignRight="@+id/record"
                android:layout_alignTop="@+id/record"
                android:gravity="center"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <fragment
            android:id="@+id/chart"
            android:name="care.dovetail.monitor.ChartFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</FrameLayout>
