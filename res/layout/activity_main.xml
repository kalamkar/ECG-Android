<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="care.dovetail.monitor.SettingsActivity" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/beat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <TextView
                android:id="@+id/bpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textColor="@color/primary_dark"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bpm"
                android:layout_alignLeft="@+id/bpm"
                android:text="@string/bpm"
                style="@style/IconTip" />
            
            <TextView
                android:id="@+id/label_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/sound"
                style="@style/IconTip" />

            <ImageView
                android:id="@+id/mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/label_mute"
                android:layout_alignRight="@+id/label_mute"
                android:src="@drawable/ic_action_audio" />

            <TextView
                android:id="@+id/label_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="@string/record"
                style="@style/IconTip" />

            <ImageView
                android:id="@+id/record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/label_record"
                android:layout_alignLeft="@+id/label_record"
                android:src="@drawable/ic_action_record" />

            <TextView
                android:id="@+id/label_freeze"
                style="@style/IconTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/freeze"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/freeze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/label_freeze"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_action_pause"
                android:visibility="gone" />

            <TextView
                android:id="@+id/label_status"
                style="@style/IconTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/connecting" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/label_status"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/progress"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_connected"
                android:visibility="invisible" />

        </RelativeLayout>
        
        <fragment
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:name="care.dovetail.monitor.ChartFragment"/>
    </LinearLayout>

</FrameLayout>
